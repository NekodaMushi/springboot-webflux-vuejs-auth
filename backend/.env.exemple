
# R2DBC URL format:
SKYSQL_DB_URL=r2dbc:mariadb://<username>:<password>@<host>:<port>/<database>?sslMode=TRUST

# Database user (without special characters like % or $)
SKYSQL_DB_USER=<username>
SKYSQL_DB_PASSWORD=<password>

# Secret key for signing JWT tokens (use a long, random string in production)
JWT_SECRET=<your-very-secret-jwt-key>
